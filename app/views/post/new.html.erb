<html>
	<head>
		<title>ShareIt</title>
	</head>

<body>
<div class=" container-fluid">

<div align="center" class="container">
	
<% if flash[:alert] %>
<div class="alert alert-danger">		
<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
<%= flash[:alert] %>
</div>
<% end %>
<% else %>
<% flash[:alert] = nil %>

</div>


<div clas="row">
	<div class="span8 well">

		<h2>Start Writing your new post!!</h2>

		<%= form_for :post, :html => {:multipart => true} do |p| %>

		<ul>
		<li><h4>Share the Link of your Favourite pages</h4></li>
		<li><%= p.text_field :title, :placeholder => 'Title', :size => '60' %></li>
		<li><%= p.text_area :data, :placeholder => 'Content', :size => '70' %></li>
		<li><%= p.text_field :tag, :placeholder => 'Tags', :size => '30' %></li>
		<li><%= p.file_field :p_thumb %></li>

		<li><%= p.submit 'Save', :class => 'btn btn-success' %></li>

		<% end  %>

		</ul>

	</div>


	<div class="span4 well">

	<h4>Share the Link of your Favourite Page!!</h4>
		

	</div>


</div>

		
		
</div>
</body>	
</html>
